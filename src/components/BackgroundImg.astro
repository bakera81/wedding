---
import { Image } from 'astro:assets';

const { height, img, href } = Astro.props;

let imgHeight = height ? height : 450; 
---
 
<div class='bgImgContainer'>
  <div class='bgImgOverlay'>
    <slot></slot>
  </div>
  {href ? (
    <a href={href} class="bgImgContainer">
    <Image 
      alt="Scenes from a spooky wedding"
      src={img}
      // height={imgHeight}
      />
    </a>
  ) : (
    <Image 
      src={img}
      alt="Scenes from a spooky wedding"
      // height={imgHeight}
      />
  )}
</div>
<style>
  .bgImgContainer {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
    display: flex; 
    align-items: center;
    justify-content: center;
    /*width: 100%;
    height: 300px; Adjust height as needed */
  }
  .bgImgOverlay {
    z-index: 1;
    position: absolute;
    /* background: white; */
    /* font-style: italic; */
    /* top: 0;
    left: 0;
    right: 0;
    bottom: 0; */
    background: rgba(255, 255, 255, 0.5);
    justify-content: center;
    text-align: center;
    /* color: black; */
    font-size: 1.5rem;
  }

  /* .image-container {
    position: relative;
    width: 100%;
    height: 100%; /* Ensure the container fills its parent 
  } */

  img {
    object-fit: cover; /* Same as objectFit='cover' */
    width: 100%;
    height: 100%; /* Match the Next.js layout='fill' behavior */
  }

</style>
