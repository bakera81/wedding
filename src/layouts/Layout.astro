---
interface Props {
	title: string;
	footer: string | null;
}

import Footer from '../components/Footer.astro'

const { title, footer } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="noindex">
		<meta name="description" content="Wren Sieber & Anthony Baker Wedding" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" type="image/svg+xml" href="/favicon_wren.png" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		{footer ? (
			<Footer footer={footer} />
		) : (<></>)}
	</body>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap');

	@font-face {
		font-family: 'Big Bird';
		src: url('/fonts/big_bird/TAYBigBird.otf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Orsay';
		src: url('/fonts/orsay/orsay.otf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

