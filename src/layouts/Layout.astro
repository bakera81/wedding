	}

	@font-face {
		font-family: 'Fleuron Regular';
		src: url('/fonts/fleuron/fonts/FleuronRegular.otf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Hot Pizza';
