	html {
		font-family: 'Fleuron', system-ui, sans-serif;
		background: #c1b09a;
	}
	.title {
		font-family: 'Fleuron', sans-serif;
		font-weight: 500;
	}
	.index-title {
		font-size: 5rem;
	}
	@media screen and (max-width: 1024px) and (min-width: 769px) {
		.index-title {
			font-size: 3.5rem;
		}
	}
	.is-0 {
		font-size: 5rem;
	}
	@media screen and (max-width: 1024px) { 
		.is-0 {
			font-size: 3.5rem;
		}
	}


	p, li {
		font-family: 'Baskerville', 'Libre Baskerville', serif;
		font-size: 1.2rem;
		max-width: 70%;
	}
	
	@media (max-width: 768px) {
		p, li {
			max-width: inherit; /* Or any other value for larger screens */
		}
	}

	p, ul, ol {
		padding-bottom: 1em;
		color: darkgray;

	}

